<aura:component controller="HomeBirthdayNoAssociateController"
                implements="lightning:isUrlAddressable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:appHostable">

	<aura:attribute name="data"
	                type="Object" />
	<aura:attribute name="columns"
	                type="List" />
	<aura:attribute name="labels"
	                type="Map"></aura:attribute>
	<aura:attribute name="currentCount"
	                type="Integer"></aura:attribute>
	<aura:attribute name="initialRows"
	                type="Integer"
	                default="10" />
	<aura:attribute name="rowsToLoad"
	                type="Integer"
	                default="100" />
	<aura:attribute name="totalNumberOfRows"
	                type="Integer"
	                default="1" />
	<aura:attribute name="loadMoreStatus"
	                type="String"
	                default="" />
	<aura:attribute name="pageReference"
	                type="Object"
	                access="GLOBAL" />

	<aura:attribute name="rowNumberOffset"
	                type="Integer"
	                default="0" />
	<aura:attribute name="Status"
	                type="String"></aura:attribute>
	<aura:attribute name="enableInfiniteLoading"
	                type="Boolean"
	                default="true"></aura:attribute>
	<aura:attribute name="isFullPage"
	                type="Boolean"></aura:attribute>

	<aura:handler name="init"
	              value="{! this }"
	              action="{! c.doInit }" />

	<aura:handler event="aura:locationChange"
	              action="{!c.refreshCmp}" />

	<aura:handler name="change"
	              value="{!v.pageReference}"
	              action="{!c.refreshCmp}" />


	<lightning:navigation aura:id="navService" />

	<div>
		<div class="slds-page-header">
			<div class="slds-page-header__row">
				<div class="slds-page-header__col-title">
					<div class="slds-media">
						<div class="slds-media__figure">
							<lightning:icon iconName="standard:campaign"
							                alternativeText="Approved" />
						</div>
						<div class="slds-media__body">
							<div class="slds-page-header__name">
								<div class="slds-page-header__name-title">
									<h1>
										<span class="slds-page-header__title slds-truncate"
										      title="">{!$Label.c.homeBirthdayTitle}</span>
									</h1>
								</div>
							</div>
							<!-- <p class="slds-page-header__name-meta">Mark Jaeckal • Unlimited Customer • 11/13/15</p> -->
						</div>
						<aura:if isTrue="{!v.isFullPage != true}">
							<lightning:button label="Show All"
							                  title="Show All"
							                  variant="neutral"
							                  onclick="{! c.goToFullComponent }"
							                  class="slds-float_right" />
						</aura:if>
					</div>
				</div>
			</div>
		</div>

		<lightning:datatable aura:id="birthdayTable"
		                     class="birthdayTable"
		                     columns="{! v.columns }"
		                     data="{! v.data }"
		                     keyField="id"
		                     rowNumberOffset="0"
		                     loadMoreOffset="{! v.loadMoreOffset }"
		                     enableInfiniteLoading="{!v.enableInfiniteLoading}"
		                     onloadmore="{! c.loadMoreData }"
							 hideCheckboxColumn="true"
							 resizeColumnDisabled="true" />

	</div>

</aura:component>